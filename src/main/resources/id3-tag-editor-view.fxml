<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.id3tageditor.ID3TagEditorController">

    <top>
        <VBox>
            <HBox styleClass="header" alignment="CENTER_LEFT" spacing="10">
                <padding><Insets top="10" right="20" bottom="10" left="20" /></padding>
                <Text text="TuneLabel - ID3 Tag Editor" styleClass="app-title" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="openFilesButton" text="Add Files" onAction="#handleOpenFilesButton" styleClass="action-button" />
                <Button fx:id="openFolderButton" text="Add Folder" onAction="#handleOpenFolderButton" styleClass="action-button" />
            </HBox>
        </VBox>
    </top>


    <center>
        <SplitPane dividerPositions="0.5" styleClass="content-grid">
            <!-- LEFT PANE: File List -->
            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10" /></padding>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Loaded Files" styleClass="field-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
                <TableView fx:id="filesTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="trackColumn" text="Track" prefWidth="50" />
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="150" />
                        <TableColumn fx:id="artistColumn" text="Artist" prefWidth="120" />
                        <TableColumn fx:id="albumColumn" text="Album" prefWidth="120" />
                        <TableColumn fx:id="yearColumn" text="Year" prefWidth="60" />
                        <TableColumn fx:id="genreColumn" text="Genre" prefWidth="100" />
                        <TableColumn fx:id="fileNameColumn" text="File Name" prefWidth="200" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>
            </VBox>


            <ScrollPane fitToWidth="true" styleClass="scroll-pane">
                <GridPane hgap="20" vgap="15">
                    <padding><Insets top="10" right="25" bottom="10" left="25" /></padding>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="55.0" />
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="45.0" />
                    </columnConstraints>

                    <VBox spacing="15" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="80" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <Label text="Title" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                            <TextField fx:id="titleField" styleClass="field-input" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                            <Label text="Album" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                            <TextField fx:id="albumField" styleClass="field-input" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                            <Label text="Artist" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                            <TextField fx:id="artistField" styleClass="field-input" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                            <Label text="Genre" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                            <TextField fx:id="genreField" styleClass="field-input" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                            <Label text="Year" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                            <TextField fx:id="yearField" styleClass="field-input" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                            <Label text="Comment" styleClass="field-label" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                            <TextField fx:id="commentField" styleClass="field-input" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                            <Label text="Track" styleClass="field-label" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                            <HBox spacing="5" alignment="CENTER_LEFT" GridPane.rowIndex="6" GridPane.columnIndex="1">
                                <TextField fx:id="trackField" prefWidth="60" styleClass="field-input-small" />
                                <Label text="of" styleClass="field-label" />
                                <TextField fx:id="trackTotalField" prefWidth="60" styleClass="field-input-small" />
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button fx:id="autoNumberButton" text="Auto-number" onAction="#handleAutoNumberTracks"/>
                            </HBox>
                            <Label text="Disk" styleClass="field-label" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                            <HBox spacing="5" alignment="CENTER_LEFT" GridPane.rowIndex="7" GridPane.columnIndex="1">
                                <TextField fx:id="diskField" prefWidth="60" styleClass="field-input-small" />
                                <Label text="of" styleClass="field-label" />
                                <TextField fx:id="diskTotalField" prefWidth="60" styleClass="field-input-small" />
                            </HBox>
                        </GridPane>


                        <TitledPane text="Additional Metadata" collapsible="true" expanded="false">
                            <GridPane hgap="10" vgap="10">
                                <padding><Insets top="15" right="5" bottom="10" left="5" /></padding>
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="80" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>
                                <Label text="Composer" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="composerField" styleClass="field-input" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                <Label text="Lyricist" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="lyricistField" styleClass="field-input" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                <Label text="Publisher" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="publisherField" styleClass="field-input" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                <Label text="Copyright" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="copyrightField" styleClass="field-input" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                                <Label text="BPM" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <TextField fx:id="bpmField" styleClass="field-input" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                                <Label text="ISRC Code" styleClass="field-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                <TextField fx:id="isrcField" styleClass="field-input" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                            </GridPane>
                        </TitledPane>

                    </VBox>


                    <VBox spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Lyrics" styleClass="field-label" />
                        <TextArea fx:id="lyricsArea" VBox.vgrow="ALWAYS" styleClass="field-input" wrapText="true" prefHeight="150"/>
                        <Label text="Cover Art" styleClass="field-label" />
                        <HBox spacing="15" alignment="TOP_LEFT">
                            <StackPane styleClass="artwork-container">
                                <ImageView fx:id="artworkImageView" fitWidth="180" fitHeight="180" preserveRatio="true" />
                            </StackPane>
                            <VBox spacing="8">
                                <Button fx:id="changeArtworkButton" text="Change" onAction="#handleChangeArtworkButton" styleClass="action-button-dark" maxWidth="Infinity" />
                                <Button fx:id="removeArtworkButton" text="Remove" onAction="#handleRemoveArtworkButton" styleClass="action-button-dark" maxWidth="Infinity" />
                            </VBox>
                        </HBox>
                    </VBox>


                    <VBox styleClass="info-pane" spacing="8" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                        <padding><Insets top="12" right="15" bottom="12" left="15" /></padding>
                        <GridPane hgap="20" vgap="5">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="120" /><ColumnConstraints hgrow="ALWAYS" />
                                <ColumnConstraints prefWidth="120" /><ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <Label text="Encoded By" styleClass="info-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <Label fx:id="encoderLabel" styleClass="info-value" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                            <Label text="Size" styleClass="info-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                            <Label fx:id="sizeLabel" styleClass="info-value" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                            <Label text="Duration" styleClass="info-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                            <Label fx:id="durationLabel" styleClass="info-value" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                            <Label text="Avg. Bitrate" styleClass="info-label" GridPane.rowIndex="0" GridPane.columnIndex="2" />
                            <Label fx:id="bitrateLabel" styleClass="info-value" GridPane.rowIndex="0" GridPane.columnIndex="3" />
                            <Label text="Mime-type" styleClass="info-label" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                            <Label fx:id="mimeTypeLabel" styleClass="info-value" GridPane.rowIndex="1" GridPane.columnIndex="3" />
                        </GridPane>
                    </VBox>
                </GridPane>
            </ScrollPane>
        </SplitPane>
    </center>


    <bottom>
        <HBox styleClass="action-bar" alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets top="15" right="20" bottom="15" left="20" /></padding>
            <Label fx:id="statusLabel" text="Ready" HBox.hgrow="ALWAYS" styleClass="status-label" />
            <Button fx:id="saveAsButton" text="Save As..." onAction="#handleSaveAsButton" disable="true" />
            <Button fx:id="saveButton" text="Save Files" onAction="#handleSaveButton" styleClass="primary-button" disable="true" />
        </HBox>
    </bottom>
</BorderPane>